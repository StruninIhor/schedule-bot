{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Nginx": {
    "PathBase": "/<YOUR_PATH>"
  },
  "ConnectionStrings": {
    "BotDb": "Host=<HOST>; Port=5432; Database=<DATABASE>; Username=<USERNAME>; Password=<PASSWORD>"
  },
  "BotConfiguration": {
    "BotToken": "<BOT_TOKEN>"
  },
  "BotMessageConfiguration": {
    "AdminId": 123456,
    "HelloMessage": "Press buttons",
    "NowLessonsCommand": "What is current lesson?",
    "TomorrowScheduleCommand": "Tomorrow's schedule",
    "TodaysScheduleCommand": "Today's schedule",
    "NoLessonsNowMessage": "No lessons now",
    "TodayNoLessonsMessage": "Today it is no lessons",
    "TomorrowNoLessonsMessage": "Tomorrow it is no lessons",
    "CurrentLessonsMessage": "Current lessons:",
    "NotUnderstandMessage": "I don't understand you, use buttons"
  },
  "urls": "http://*:5000",
  "BotChatConfiguration": {
    "ChatId": -123456,
    "PinMessage": true
  },
  "ScheduleSendInterval": "30 8 * * 1-5"
}
